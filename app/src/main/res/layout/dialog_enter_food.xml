<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:text="@string/enter_food"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"
        android:padding="16dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <AutoCompleteTextView
        android:id="@+id/et_food_name"
        android:hint="@string/food"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

    <EditText
        android:id="@+id/et_calories"
        android:hint="@string/calories"
        android:textSize="18sp"
        android:inputType="number"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_food_name"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/b_done"
        android:text="@string/done"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_calories"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp" />

</android.support.constraint.ConstraintLayout>